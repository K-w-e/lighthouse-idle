{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/phaser/types"],
        "types": ["phaser"]
    },
    "include": ["src/**/*.ts"]
}
